                    <% elsif @rank == "DIAMOND" %>
                    <img src="http://img3.wikia.nocookie.net/__cb20130928162320/leagueoflegends/images/thumb/0/03/DiamondBadge.png/120px-DiamondBadge.png"/>
                    <div style="color:LightCyan; font-size: 2em;"><strong><%=@rank%> <%=@tier%></strong></div>
                    <% elsif @rank == "CHALLENGER"%>

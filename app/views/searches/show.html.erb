    <!--******************** Match History Section ********************-->
    <section id="portfolio" class="single-page scrollblock">
      <div class="container">
        <div class="align"></div>
        <h1 id="folio-headline">Recent Matches</h1>
        <div class="row">


          <%@champ_images.each_with_index do |image, i| %>
          <div class="span4">
            <div class="mask2"> <a href="img/portfolio-01.jpg" rel="prettyPhoto"><%=image_tag(image)%></a> </div>
            <% @game_stats[i].each do |stats| %>
            <% if stats["statType"] == "WIN" %>
            <div class="inside">
              <hgroup>
                <h2 style="background-color: green;">WIN</h2>
              </hgroup>
            </div>
              <% elsif stats["statType"] == "LOSE"%>
              <div class="inside">
              <hgroup>
                <h2 style="background-color: red;">LOSS</h2>
              </hgroup>
            </div>
              <% end %>
              <% if stats["statType"] == "CHAMPIONS_KILLED" || stats["statType"] == "NUM_DEATHS" || stats["statType"] == "ASSISTS" %>
              <div class="entry-content">
                <p><%=stats["statType"]%>: <%=stats["value"]%></p>
            </div>
              <% end %>
              <% end %>
            <!-- /.inside -->
          </div>
              <% end %>
          <!-- /.span4 -->
          
        </div>
        <!-- /.row -->
        
        
          </div>
          <!-- /.span4 -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container -->
    </section>




